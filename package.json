{
  "name": "playwright-bdd",
  "description": "BDD Testing with Playwright and Cucumber-js",
  "version": "3.0.1-1",
  "bin": {
    "bddgen": "./dist/gen/cli.js"
  },
  "main": "./dist/index.js",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .hooks",
    "lint": "eslint .",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:w": "prettier --write --ignore-unknown .",
    "test": "node test/runner.mjs",
    "only": "node --test-only test/runner.mjs",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "examples:b": "./scripts/examples-build.sh",
    "examples": "./scripts/examples.sh",
    "toc": "markdown-toc README.md -i --maxdepth 4",
    "release": "./scripts/release.sh"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "fast-glob": "^3.2.12"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.1.2",
    "@eslint/js": "^8.42.0",
    "@playwright/test": "^1.34.3",
    "@types/node": "^18.15.0",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "globals": "^13.20.0",
    "lint-staged": "^13.2.2",
    "markdown-toc": "^1.2.0",
    "np": "^8.0.2",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "@cucumber/cucumber": "*",
    "@playwright/test": ">=1.32"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/playwright-bdd.git"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "gherkin",
    "bdd",
    "testing",
    "e2e"
  ],
  "license": "MIT"
}
