{
  "name": "playwright-bdd",
  "description": "BDD Testing with Playwright runner and CucumberJS",
  "version": "3.3.0",
  "bin": {
    "bddgen": "./dist/gen/cli.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./decorators": "./dist/decorators.js"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .hooks",
    "lint": "eslint .",
    "knip": "knip -c knip.config.ts",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:w": "prettier --write --ignore-unknown .",
    "test": "node test/setup.mjs && node --test test/**/test.mjs",
    "only": "node test/setup.mjs && node --test --test-only test/**/test.mjs",
    "only:d": "TEST_DEBUG=1 npm run only",
    "build": "rm -rf dist && tsc -p tsconfig.build.json",
    "examples": "ts-node scripts/examples.ts",
    "toc": "markdown-toc README.md -i --maxdepth 4",
    "release": "./scripts/release.sh"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "fast-glob": "^3.3.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.2.0",
    "@eslint/js": "^8.45.0",
    "@playwright/test": "1.35",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "globals": "^13.20.0",
    "knip": "^2.16.0",
    "lint-staged": "^13.2.3",
    "markdown-toc": "^1.2.0",
    "np": "^8.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "publint": "^0.1.16",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@cucumber/cucumber": ">=9",
    "@playwright/test": ">=1.33"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/playwright-bdd.git"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "gherkin",
    "bdd",
    "testing",
    "e2e"
  ],
  "license": "MIT"
}
